@model IEnumerable<ListenAndWrite.Web.Models.UserAudioViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section footerJS{
    <script src="~/Assets/Admin/libs/jquery-ui/jquery-ui.js"></script>
    <link href="~/Assets/Admin/libs/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />

    <script src="~/Assets/Client/js/controllers/userAudio.js"></script>
}
    <h2>@ListenAndWrite.Web.Resources.HomeTexts.MyAudio</h2>

<p>
    @Html.ActionLink(@ListenAndWrite.Web.Resources.HomeTexts.SubmitAudio, "Create", null, new { @class = "btn btn-success" })
</p>
@if (Model.Count() == 0)
{
    <h1>@ListenAndWrite.Web.Resources.HomeTexts.Empty</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                @ListenAndWrite.Web.Resources.HomeTexts.Play
            </th>
            <th>
                @ListenAndWrite.Web.Resources.HomeTexts.Title
            </th>
            <th>
                @ListenAndWrite.Web.Resources.HomeTexts.CreatedDate
            </th>
            <th>
                @ListenAndWrite.Web.Resources.HomeTexts.Action
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary btn-play" data-path="@item.Path" data-text="@item.Text">@ListenAndWrite.Web.Resources.HomeTexts.Play</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AudioTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.ActionLink(@ListenAndWrite.Web.Resources.HomeTexts.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink(@ListenAndWrite.Web.Resources.HomeTexts.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this audio?');" })
                </td>
            </tr>
        }
    </table>

}
<div id="dialogPlay" data-text="">
</div>





