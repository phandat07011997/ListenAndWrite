
@{
    ViewBag.Title = "ListAudio";
    Layout = "~/Views/Shared/AdminLayouts.cshtml";
}
@section footerJS{
    <script src="~/Assets/Admin/libs/mustache/mustache.min.js"></script>
    <script src="~/Assets/Client/js/jquery.twbsPagination.min.js"></script>
    <script src="~/Assets/Admin/js/controllers/listAudio.js"></script>

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Sản phẩm
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="#">Audio</a></li>
        <li class="active">Audio</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Audio</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-group">
                        <input ng-model="keyword" type="text" class="form-control" placeholder="Từ khóa" />
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button" ng-click="search()">Tìm kiếm</button>
                        </span>
                    </div>
                </div>
                <div class="col-md-6">

                    <a href="/Admin/AddAudio" class="btn btn-success">Thêm mới audio</a>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12" id="content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th style="width: 55%">Audio Title</th>
                                <th style="width: 20%">Ngày tạo</th>
                                <th style="width: 10%">Trạng thái</th>
                                <th style="width: 10%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="audioTable"></tbody>
                        <tfoot>

                        </tfoot>

                    </table>


                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <ul id="pagination" class="pagination-sm"></ul>
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Id}}</td>
        <td>{{AudioTitle}}</td>
        <td>
            {{CreatedDate}}
        </td>
        <td>{{{Status}}}</td>
        <td>
            <a href="/Admin/AddTrack?audioId={{Id}}" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
            @*<button class="btn btn-sm btn-primary" accesskey=""><i class="fa fa-pencil"></i></button>*@
            <button class="btn btn-sm btn-danger btnDel" data-id="{{Id}}"><i class="fa fa-trash"></i></button>
        </td>
    </tr>
</script>