@model ListenAndWrite.Web.Models.AudioViewModel
@{
    ViewBag.Title = "AddTrack";
    Layout = "~/Views/Shared/AdminLayouts.cshtml";
}
@section footerJS{
    <script src="~/Assets/Admin/libs/jquery-ui/jquery-ui.js"></script>
    <link href="~/Assets/Admin/libs/jquery-ui/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Assets/Admin/js/controllers/addTrack.js"></script>
    
}
<section class="content-header">
    <h1>
        Audio
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Trang chủ</a></li>
        <li><a href="#">Audio</a></li>
        <li class="active">Audio</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Audio</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <h2>@Model.AudioTitle</h2>
                    <input type="hidden" id="audioId" value="@Model.Id" />
                    <input type="hidden" id="audioTitle" value="@Model.AudioTitle" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <audio controls loop>
                        <source src="@Model.Path" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <input class="btn btn-success" type="button" id="btnAddTrack" value="Add new track" />
                    <input class="btn btn-danger" type="button" id="btnClearTrack" value="Clear all" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="dialog">
                        <table>
                            <tr>
                                <td>Time start</td>
                            </tr>
                            <tr>
                                <td><input type="number" id="txtTimeStart" /></td>
                            </tr>
                            <tr>
                                <td>Duration</td>
                            </tr>
                            <tr>
                                <td><input type="number" id="txtDuration" /></td>
                            </tr>
                            <tr>
                                <td>Answer</td>
                            </tr>
                            <tr>
                                <td><input type="text" id="txtAnswer" /></td>
                            </tr>
                        </table>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="tracks">
                            <thead>
                                <tr>
                                    <th>TrackTitle</th>
                                    <th>Time start</th>
                                    <th>Duration</th>
                                    <th>Answer</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <br />
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-md-3">
                    <a href="/Admin/ListAudio" class="btn btn-default">Back to list Audio</a>
                </div>
            </div>
        </div>

        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->
